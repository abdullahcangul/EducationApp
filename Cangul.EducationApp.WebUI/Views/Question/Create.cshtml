@model QuestionAddDto
@{
    ViewData["Title"] = "Create";
}

<div class="col-lg-12">
    <div class="card card-custom example example-compact">
        <div class="card-header">
            <h3 class="card-title">Test Add</h3>
            <div class="card-toolbar">

            </div>
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form class="form" id="kt_form_1" method="post">
                <div class="form-group row">
                    <label class="col-form-label text-left col-lg-2 col-sm-12">Name *</label>
                    <div class="col-lg-10 col-md-9 col-sm-12">
                        <input type="text" class="form-control" asp-for="Content" name="Content" placeholder="Enter exam name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label text-left col-lg-2 col-sm-12">Description *</label>
                    <div class="col-lg-10 col-md-9 col-sm-12">
                        <input type="text" class="form-control" asp-for="Description" name="Description" placeholder="Enter exam description" />
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-form-label text-left col-lg-2 col-sm-12">Soru Konusu Seçiniz:</label>
                    <select asp-for="TopicId " class="form-control col-lg-10 col-md-9 col-sm-12" name="TopicId" asp-items=" ViewBag.Topicies">
                        <option hidden value="-1">Seçiniz</option>
                    </select>
                </div>

                <div class="card-footer">
                    <div class="row">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-primary font-weight-bold mr-2">Save</button>
                            <button type="reset" class="btn btn-light-primary font-weight-bold">Cancel</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>



    </div>
</div>
@section JavaScript{
    <script src="/demo1/dist/assets/js/pages/crud/forms/validation/form-widgets.js?v=7.0.4"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/TestPage/TestValidation.js"></script>
}

