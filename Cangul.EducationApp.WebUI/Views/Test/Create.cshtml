@model TestAddDto
@{
    ViewData["Title"] = "Create";
    var result = ViewContext.ViewData.ModelState.Root.Errors;
}

<div class="col-lg-12">
    <div class="card card-custom " data-card="true" id="kt_card_4">
            <div class="card-header">
            <div class="card-title">
                <h3 class="card-label">Test Ekle</h3>
            </div>
            <div class="card-toolbar">
                <a href="#" class="btn btn-icon btn-sm btn-light-primary mr-1" data-card-tool="toggle">
                    <i class="ki ki-arrow-down icon-nm"></i>
                </a>
                <a href="#" class="btn btn-icon btn-sm btn-light-success mr-1" data-card-tool="reload">
                    <i class="ki ki-reload icon-nm"></i>
                </a>
                <a href="#" class="btn btn-icon btn-sm btn-light-danger" data-card-tool="remove">
                    <i class="ki ki-close icon-nm"></i>
                </a>
            </div>
        </div>
        
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form class="form" id="kt_form_1" method="post">
                    <div class="form-group row">
                        <label class="col-form-label text-left col-lg-2 col-sm-12">Name *</label>
                        <div class="col-lg-10 col-md-9 col-sm-12">
                            <input type="text" class="form-control" asp-for="Name" name="Name" placeholder="Enter exam name" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label text-left col-lg-2 col-sm-12">Description *</label>
                        <div class="col-lg-10 col-md-9 col-sm-12">
                            <input type="text" class="form-control" asp-for="Description" name="Description" placeholder="Enter exam description" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label text-left col-lg-2 col-sm-12">Ders *</label>
                        <div class="col-lg-10 col-md-9 col-sm-12">
                            <select class="form-control " name="TopicId" asp-items=" ViewBag.Topicies">
                                <option hidden value="-1">Seçiniz</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label col-lg-2 col-sm-12 text-left">Sınav Tarihi *</label>
                        <div class="col-lg-10 col-md-9 col-sm-12">
                            <div class="input-group date">
                                <input type="text" class="form-control" asp-for="ExamDate" name="ExamDate" value="@DateTime.Now" placeholder="Select date & time" id="kt_datetimepicker" />
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="la la-calendar-check-o glyphicon-th"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="card-footer">
                        <div class="row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary font-weight-bold mr-2">Save</button>
                                <button type="reset" class="btn btn-light-primary font-weight-bold">Cancel</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
       
    </div>
    <br />

        <div class="card card-custom card-collapsed" data-card="true" id="kt_card_4">
            <div class="card-header">
                <div class="card-title">
                    <h3 class="card-label">Soru Ekle</h3>
                </div>
                <div class="card-toolbar">
                    <a href="#" class="btn btn-icon btn-sm btn-light-primary mr-1" data-card-tool="toggle">
                        <i class="ki ki-arrow-down icon-nm"></i>
                    </a>
                    <a href="#" class="btn btn-icon btn-sm btn-light-success mr-1" data-card-tool="reload">
                        <i class="ki ki-reload icon-nm"></i>
                    </a>
                    <a href="#" class="btn btn-icon btn-sm btn-light-danger" data-card-tool="remove">
                        <i class="ki ki-close icon-nm"></i>
                    </a>
                </div>
            </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form class="form" id="kt_form_1" method="post">
                        <div class="form-group row">
                            <label class="col-form-label text-left col-lg-2 col-sm-12">Name *</label>
                            <div class="col-lg-10 col-md-9 col-sm-12">
                                <input type="text" class="form-control" name="Content" placeholder="Enter exam name" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label text-left col-lg-2 col-sm-12">Description *</label>
                            <div class="col-lg-10 col-md-9 col-sm-12">
                                <input type="text" class="form-control" name="Description" placeholder="Enter exam description" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label text-left col-lg-2 col-sm-12">Soru Konusu Seçiniz:</label>
                            <div class="col-lg-10 col-md-9 col-sm-12">
                                <select class="form-control " name="TopicId" asp-items=" ViewBag.Topicies">
                                    <option hidden value="-1">Seçiniz</option>
                                </select>
                            </div>

                        </div>

                        <div class="card-footer">
                            <div class="row">
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-primary font-weight-bold mr-2">Save</button>
                                    <button type="reset" class="btn btn-light-primary font-weight-bold">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
        </div>

    </div>


